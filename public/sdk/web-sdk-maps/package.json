{
  "name": "@tomtom-international/web-sdk-maps",
  "version": "5.34.4",
  "description": "TomTom Maps SDK for Web",
  "main": "dist/map.min.js",
  "browser": "dist/map-web.min.js",
  "files": [
    "dist/map*",
    "dist/css-styles/*"
  ],
  "scripts": {
    "clean": "rm -rf ./dist *.zip *.tgz",
    "copy:main-config": "node ../../scripts/copyMainConfig",
    "copy:assets": "node ../../scripts/copyMapAssets",
    "build:fast": "npm run copy:main-config && webpack --env.production",
    "build:fast:verizon": "npm run copy:main-config -- --endpoint=preprod.api-system.tomtom.com && webpack --env.production",
    "build:watch": "node ../../scripts/copyHtmlFiles && webpack -w & npm start",
    "build": "npm run clean && npm run lint && npm run test && npm run build:fast && npm run copy:assets && npm run package",
    "build:verizon": "npm run clean && npm run lint && npm run test && npm run build:fast:verizon && npm run copy:assets && npm run package && npm run rename:verizon",
    "lint": "eslint -c ../../.eslintrc ../../src/ ../../test/",
    "package": "pack-to-zip",
    "prepack": "node ../../scripts/createSdkLicense map",
    "rename:verizon": "renamer --find '/$/' --replace=-verizon --path-element name *.zip",
    "start": "http-server ./dist",
    "test": "npm run copy:main-config && karma start --singleRun=true"
  },
  "author": "TomTom",
  "license": "SEE LICENSE IN LICENSE.txt",
  "dependencies": {
    "@mapbox/mapbox-gl-rtl-text": "0.2.1",
    "axios": "0.18.0",
    "core-js": "2.5.7",
    "lodash": "4.17.5",
    "mapbox-gl": "1.0.0",
    "regenerator-runtime": "0.12.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@adamburgess/istanbul-instrumenter-loader": "4.0.0",
    "axios-mock-adapter": "1.14.0",
    "babel-core": "6.26.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "7.1.2",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-async-to-generator": "6.24.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "eslint": "5.9.0",
    "http-server": "0.11.1",
    "jasmine-core": "2.8.0",
    "karma": "2.0.5",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.9",
    "pack-to-zip": "1.0.0",
    "raw-loader": "1.0.0",
    "renamer": "1.1.2",
    "svg-inline-loader": "0.8.0",
    "uglifyjs-webpack-plugin": "1.1.8",
    "webpack": "3.10.0",
    "webpack-merge": "4.2.1"
  }
}
